<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="6dp"
    android:elevation="4dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="100dp" />

    <TextView
        android:id="@+id/txtNameAdapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="게임 이름"
        android:textSize="22dp"
        app:layout_constraintBottom_toTopOf="@id/guideline"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txtPlayerAdapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round"
        android:text="# 1 - 2명"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/txtTimeAdapter"
        app:layout_constraintTop_toTopOf="@id/guideline" />

    <TextView
        android:id="@+id/txtTimeAdapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/round"
        android:text="# 소요시간"
        android:textSize="18dp"
        app:layout_constraintLeft_toRightOf="@id/txtPlayerAdapter"
        app:layout_constraintRight_toLeftOf="@id/txtGenreAdapter"
        app:layout_constraintTop_toTopOf="@id/guideline" />

    <TextView
        android:id="@+id/txtGenreAdapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/round"
        android:text="# 장르"
        android:textSize="18dp"
        app:layout_constraintLeft_toRightOf="@id/txtTimeAdapter"
        app:layout_constraintRight_toLeftOf="@id/txtDifficultyAdapter"
        app:layout_constraintTop_toTopOf="@id/guideline" />

    <TextView
        android:id="@+id/txtDifficultyAdapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/round"
        android:text="# 난이도"
        android:textSize="18dp"
        app:layout_constraintLeft_toRightOf="@id/txtGenreAdapter"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline" />

</androidx.constraintlayout.widget.ConstraintLayout>